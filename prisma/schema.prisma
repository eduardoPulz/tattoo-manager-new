datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Funcionario {
  id    Int    @id @default(autoincrement())
  nome  String
  cargo String
  email String
  
  // Relação com agendamentos
  agendamentos Agendamento[]

  @@map("funcionarios")
}

model Servico {
  id      Int   @id @default(autoincrement())
  nome    String
  preco   Float
  duracao Int
  
  // Relação com agendamentos
  agendamentos Agendamento[]

  @@map("servicos")
}

model Agendamento {
  id            Int      @id @default(autoincrement())
  data          DateTime
  nomeCliente   String
  funcionarioId Int
  servicoId     Int
  
  // Definir as relações com as outras tabelas
  funcionario   Funcionario @relation(fields: [funcionarioId], references: [id])
  servico       Servico     @relation(fields: [servicoId], references: [id])

  @@map("agendamentos")
}
