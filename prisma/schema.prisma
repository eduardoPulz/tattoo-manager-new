datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // Será substituído pelo Railway em produção
}

generator client {
  provider = "prisma-client-js"
}

model Funcionario {
  id    Int    @id @default(autoincrement())
  nome  String
  cargo String
  email String

  @@map("funcionarios")
}

model Servico {
  id      Int   @id @default(autoincrement())
  nome    String
  preco   Float
  duracao Int

  @@map("servicos")
}

model Agendamento {
  id            Int      @id @default(autoincrement())
  data          DateTime
  nomeCliente   String
  funcionarioId Int
  servicoId     Int

  @@map("agendamentos")
}
