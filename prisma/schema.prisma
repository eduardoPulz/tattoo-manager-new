datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING") // Usado para migrações
}

generator client {
  provider = "prisma-client-js"
}

model Funcionario {
  id           Int           @id @default(autoincrement())
  nome         String
  cargo        String
  email        String        @unique
  agendamentos Agendamento[]

  @@map("funcionarios")
}

model Servico {
  id           Int           @id @default(autoincrement())
  nome         String
  preco        Float
  duracao      Int           // duração em minutos
  agendamentos Agendamento[]

  @@map("servicos")
}

model Agendamento {
  id            Int         @id @default(autoincrement())
  data          DateTime
  funcionarioId Int
  servicoId     Int
  nomeCliente   String
  funcionario   Funcionario @relation(fields: [funcionarioId], references: [id])
  servico       Servico     @relation(fields: [servicoId], references: [id])

  @@map("agendamentos")
}
